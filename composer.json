{
  "name": "remls/hijri-date",
  "description": "Laravel helper package for Hijri dates. Supports displaying dates in Arabic, Bengali, Dhivehi and English.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Adam Raaif Nasheed",
      "email": "adam.raaif.nasheed7@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "laravel/framework": "^8.0||^9.0||^10.0",
    "ext-intl": "*"
  },
  "autoload": {
    "psr-4": {
      "Remls\\HijriDate\\": "src"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Remls\\HijriDate\\HijriDateServiceProvider"
      ]
    },
    "aliases": {
      "HijriDate": "Remls\\HijriDate\\Facades\\HijriDate"
    }
  }
}
